[Unit]
Description=CED Wikipedia Agent - Monitor
After=redis-server.service

[Service]
Type=simple
PIDFile=/var/run/event-data-wikipedia-agent-monitor.pid
WorkingDirectory=/home/deploy/event-data-wikipedia-agent
Environment=CONFIG=/home/deploy/event-data-wikipedia-agent/config/prod/config.edn
ExecStart=/usr/bin/java -jar /home/deploy/event-data-wikipedia-agent/target/uberjar/event-data-wikipedia-agent-0.1.0-SNAPSHOT-standalone.jar monitor
Restart=on-abort
User=deploy

[Install]
WantedBy=multi-user.target
